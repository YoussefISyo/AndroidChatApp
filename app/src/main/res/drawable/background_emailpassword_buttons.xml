<?xml version="1.0" encoding="utf-8"?>


<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item>
    <layer-list>
        <item  >
            <shape>
                <corners android:radius="25dp" />
                <solid android:color="@color/colorPrimary" />
                <gradient

                    android:endColor="@color/colorPrimary" android:startColor="@color/colorAccent" />
            </shape>
        </item>
        <item android:bottom="2dp" android:left="0.5dp" android:right="0.5dp">
            <shape
                xmlns:android="http://schemas.android.com/apk/res/android">

                <corners
                    android:radius="25dp" />

                <padding
                    android:left="2dp"
                    android:right="2dp"
                    android:top="2dp"
                    android:bottom="2dp"/>

                <solid android:color="#fff"/>

            </shape>
        </item>

    </layer-list>
</item>

</selector>